<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Asana.Maui.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Asana.Maui.Converters"
             NavigatedTo="ContentPage_NavigatedTo"
             Title="Asana Task Manager">

    <ContentPage.Resources>
        <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
            
            <!-- Search Section -->
            <Frame BackgroundColor="LightGray" Padding="10" CornerRadius="5">
                <Grid ColumnDefinitions="*,Auto">
                    <Entry Grid.Column="0"
                           Text="{Binding SearchText}"
                           Placeholder="Search todos..."
                           FontSize="16"
                           BackgroundColor="White"
                           ClearButtonVisibility="WhileEditing" />
                    <Button Grid.Column="1"
                            Text="Clear"
                            Command="{Binding ClearSearchCommand}"
                            BackgroundColor="DarkBlue"
                            TextColor="White"
                            Margin="5,0,0,0"
                            IsVisible="{Binding SearchText, Converter={StaticResource StringToBoolConverter}}" />
                </Grid>
            </Frame>
            
            <!-- Show CheckBox -->
            <StackLayout Orientation="Horizontal">
                <CheckBox x:Name="ShowCompletedCheckBox" 
                        IsChecked="{Binding IsShowCompleted}" />
                <Label Text="Show Completed Tasks" VerticalOptions="Center" />
            </StackLayout>

            <!-- ToDo ListView -->
            <ListView x:Name="ToDoListView" 
                      ItemsSource="{Binding ToDos}"
                      SelectedItem="{Binding SelectedToDo}"
                      HeightRequest="300">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <StackLayout Grid.Column="0" Orientation="Vertical">
                                    <Label Text="{Binding Model.Name}" FontAttributes="Bold" FontSize="Small"/>
                                    <Label Text="{Binding Model.Description}" />
                                    <Label Text="{Binding Model.Priority, StringFormat='Priority: {0}'}"
                                           FontSize="Small" TextColor="Blue" />                                        
                                    <Label Text="{Binding Model.Project.Name, StringFormat='Project: {0}'}" 
                                           FontSize="Small" TextColor="Gray" />
                                    <Label Text="{Binding Model.DueDate, StringFormat='Due: {0:yyyy-MM-dd}'}" 
                                           FontSize="Small" TextColor="Red" />
                                </StackLayout>
                                
                                <Button Grid.Column="1" 
                                        Text="Delete" 
                                        Clicked="InLineDeleteClicked" 
                                        BackgroundColor="Red" 
                                        TextColor="White" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.EmptyView>
                    <StackLayout Padding="20">
                        <Label Text="No todos found"
                               FontSize="16"
                               TextColor="Gray"
                               HorizontalOptions="Center" />
                        <Label Text="{Binding SearchText, StringFormat='Try adjusting your search: &quot;{0}&quot;'}"
                               FontSize="14"
                               TextColor="Gray"
                               HorizontalOptions="Center"
                               IsVisible="{Binding SearchText, Converter={StaticResource StringToBoolConverter}}" />
                    </StackLayout>
                </ListView.EmptyView>
            </ListView>

            <!-- Action Buttons -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button x:Name="AddNewBtn" 
                        Text="Add New ToDo" 
                        Clicked="AddNewClicked" 
                        BackgroundColor="Green" 
                        TextColor="White" />
                
                <Button x:Name="EditBtn" 
                        Text="Edit Selected" 
                        Clicked="EditClicked" 
                        BackgroundColor="Blue" 
                        TextColor="White" />
                
                <Button x:Name="DeleteBtn" 
                        Text="Delete Selected" 
                        Clicked="DeleteClicked" 
                        BackgroundColor="Red" 
                        TextColor="White" />
            </StackLayout>

            <!-- Project Management Button -->
            <Button x:Name="ProjectBtn" 
                    Text="Manage Projects" 
                    Clicked="ProjectClicked" 
                    BackgroundColor="Purple" 
                    TextColor="White" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>