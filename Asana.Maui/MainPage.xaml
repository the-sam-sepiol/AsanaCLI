<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Asana.Maui.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Asana.Maui.Converters"
             NavigatedTo="ContentPage_NavigatedTo"
             Title="Asana Task Manager">

    <ContentPage.Resources>
        <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
        <converters:EnumToStringConverter x:Key="EnumToStringConverter" />
        <!-- Inverse Bool Converter -->
        <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        <!-- Bool to Icon Converter -->
        <converters:BoolToIconConverter x:Key="BoolToIconConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
            
            <!-- Search Section -->
            <Frame BackgroundColor="LightGray" Padding="10" CornerRadius="5">
                <Grid ColumnDefinitions="*,Auto">
                    <Entry Grid.Column="0"
                           Text="{Binding SearchText}"
                           Placeholder="Search todos..."
                           FontSize="16"
                           BackgroundColor="White"
                           ClearButtonVisibility="WhileEditing" />
                    <Button Grid.Column="1"
                            Text="Clear"
                            Command="{Binding ClearSearchCommand}"
                            BackgroundColor="DarkBlue"
                            TextColor="White"
                            Margin="5,0,0,0"
                            IsVisible="{Binding SearchText, Converter={StaticResource StringToBoolConverter}}" />
                </Grid>
            </Frame>

            <!-- Sort Section -->
            <Frame BackgroundColor="LightBlue" Padding="10" CornerRadius="5">
                <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto">
                    <Label Grid.Column="0" 
                           Text="Sort by:" 
                           VerticalOptions="Center" 
                           FontAttributes="Bold" />
                    
                    <Picker Grid.Column="1" 
                            ItemsSource="{Binding SortOptions}"
                            SelectedItem="{Binding SelectedSortOption, Converter={StaticResource EnumToStringConverter}}"
                            BackgroundColor="White"
                            Margin="10,0" />
                    
                    <Button Grid.Column="2"
                            Text="{Binding SortDirectionText}"
                            Command="{Binding ToggleSortDirectionCommand}"
                            BackgroundColor="Orange"
                            TextColor="White"
                            WidthRequest="60" />
                    
                    <Button Grid.Column="3"
                            Text="{Binding GroupViewButtonText}"
                            Command="{Binding ToggleGroupViewCommand}"
                            BackgroundColor="Teal"
                            TextColor="White"
                            FontSize="12"
                            Margin="5,0" />
                    
                    <Label Grid.Column="4" 
                           Text="📊" 
                           FontSize="20"
                           VerticalOptions="Center"
                           Margin="10,0,0,0" />
                </Grid>
            </Frame>
            
            <!-- Show CheckBox -->
            <StackLayout Orientation="Horizontal">
                <CheckBox x:Name="ShowCompletedCheckBox" 
                        IsChecked="{Binding IsShowCompleted}" />
                <Label Text="Show Completed Tasks" VerticalOptions="Center" />
            </StackLayout>

            <!-- Regular ToDo CollectionView -->
            <CollectionView x:Name="ToDoCollectionView" 
                            ItemsSource="{Binding ToDos}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedToDo}"
                            HeightRequest="300"
                            IsVisible="{Binding IsGroupedView, Converter={StaticResource InverseBoolConverter}}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <StackLayout Grid.Column="0" Orientation="Vertical">
                                <Label Text="{Binding Model.Name}" FontAttributes="Bold" FontSize="Small"/>
                                <Label Text="{Binding Model.Description}" />
                                <Label Text="{Binding Model.Priority, StringFormat='Priority: {0}'}"
                                       FontSize="Small" TextColor="Blue" />                                        
                                <Label Text="{Binding Model.Project.Name, StringFormat='Project: {0}'}" 
                                       FontSize="Small" TextColor="Gray" />
                                <Label Text="{Binding Model.DueDate, StringFormat='Due: {0:yyyy-MM-dd}'}" 
                                       FontSize="Small" TextColor="Red" />
                            </StackLayout>
                            
                            <Button Grid.Column="1" 
                                    Text="Delete" 
                                    Clicked="InLineDeleteClicked" 
                                    BackgroundColor="Red" 
                                    TextColor="White" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <StackLayout Padding="20">
                        <Label Text="No todos found"
                               FontSize="16"
                               TextColor="Gray"
                               HorizontalOptions="Center" />
                        <Label Text="{Binding SearchText, StringFormat='Try adjusting your search: &quot;{0}&quot;'}"
                               FontSize="14"
                               TextColor="Gray"
                               HorizontalOptions="Center"
                               IsVisible="{Binding SearchText, Converter={StaticResource StringToBoolConverter}}" />
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>

            <!-- Grouped ToDo CollectionView -->
            <CollectionView x:Name="GroupedToDoCollectionView" 
                            ItemsSource="{Binding GroupedToDos}"
                            HeightRequest="300"
                            IsVisible="{Binding IsGroupedView}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10" BackgroundColor="LightGray" Margin="0,5">
                            <!-- Project Header -->
                            <Grid BackgroundColor="DarkBlue" Padding="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <Label Grid.Column="0" 
                                       Text="{Binding ProjectName}" 
                                       FontAttributes="Bold" 
                                       FontSize="16" 
                                       TextColor="White" />
                                
                                <Label Grid.Column="1" 
                                       Text="{Binding TodoCountText}" 
                                       FontSize="12" 
                                       TextColor="LightGray" 
                                       Margin="10,0" />
                                
                                <Label Grid.Column="2" 
                                       Text="{Binding CompletionPercent, StringFormat='{0}%'}" 
                                       FontSize="12" 
                                       TextColor="Yellow" 
                                       FontAttributes="Bold" />
                            </Grid>
                            
                            <!-- Todos in this project -->
                            <CollectionView ItemsSource="{Binding ToDos}" 
                                            BackgroundColor="White">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="15,5" Margin="10,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Completion Status -->
                                            <Label Grid.Column="0" 
                                                   Text="{Binding Model.IsCompleted, Converter={StaticResource BoolToIconConverter}}" 
                                                   FontSize="16"
                                                   VerticalOptions="Center"
                                                   Margin="0,0,10,0" />
                                            
                                            <!-- Todo Details -->
                                            <StackLayout Grid.Column="1" Orientation="Vertical">
                                                <Label Text="{Binding Model.Name}" 
                                                       FontAttributes="Bold" 
                                                       FontSize="14"/>
                                                <Label Text="{Binding Model.Description}" 
                                                       FontSize="12" 
                                                       TextColor="Gray" />
                                                <StackLayout Orientation="Horizontal">
                                                    <Label Text="{Binding Model.Priority, StringFormat='Priority: {0}'}"
                                                           FontSize="10" 
                                                           TextColor="Blue" />
                                                    <Label Text="{Binding Model.DueDate, StringFormat='Due: {0:MM/dd}'}" 
                                                           FontSize="10" 
                                                           TextColor="Red" 
                                                           Margin="15,0,0,0" />
                                                </StackLayout>
                                            </StackLayout>
                                            
                                            <Button Grid.Column="2" 
                                                    Text="Delete" 
                                                    Clicked="InLineDeleteClicked" 
                                                    BackgroundColor="Red" 
                                                    TextColor="White"
                                                    FontSize="10"
                                                    Padding="5" />
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                                <CollectionView.EmptyView>
                                    <Label Text="📝 No todos in this project" 
                                           FontSize="12" 
                                           TextColor="Gray"
                                           HorizontalOptions="Center"
                                           Padding="20" />
                                </CollectionView.EmptyView>
                            </CollectionView>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <StackLayout Padding="20">
                        <Label Text="No project groups found"
                               FontSize="16"
                               TextColor="Gray"
                               HorizontalOptions="Center" />
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>

            <!-- Action Buttons -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button x:Name="AddNewBtn" 
                        Text="Add New ToDo" 
                        Clicked="AddNewClicked" 
                        BackgroundColor="Green" 
                        TextColor="White" />
                
                <Button x:Name="EditBtn" 
                        Text="Edit Selected" 
                        Clicked="EditClicked" 
                        BackgroundColor="Blue" 
                        TextColor="White" />
                
                <Button x:Name="DeleteBtn" 
                        Text="Delete Selected" 
                        Clicked="DeleteClicked" 
                        BackgroundColor="Red" 
                        TextColor="White" />
            </StackLayout>

            <!-- Export/Import Buttons -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
                <Button Text="📤 Export Data" 
                        Command="{Binding ExportDataCommand}"
                        BackgroundColor="Purple" 
                        TextColor="White"
                        FontSize="12" />
                
                <Button Text="📥 Import Data" 
                        Command="{Binding ImportDataCommand}"
                        BackgroundColor="Teal" 
                        TextColor="White"
                        FontSize="12" />
            </StackLayout>

            <!-- Project Management Button -->
            <Button x:Name="ProjectBtn" 
                    Text="Manage Projects" 
                    Clicked="ProjectClicked" 
                    BackgroundColor="Purple" 
                    TextColor="White" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>